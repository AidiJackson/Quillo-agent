APP_ENV=dev
APP_PORT=8000
DATABASE_URL=sqlite:///./quillo.db

# LLM Provider: OpenRouter
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_FAST_MODEL=anthropic/claude-3-haiku
OPENROUTER_BALANCED_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_PREMIUM_MODEL=anthropic/claude-opus-4
OPENROUTER_GEMINI_MODEL=google/gemini-2.0-flash-exp:free

# Raw Chat Mode default chat model (OpenRouter)
# Set this to your preferred "ChatGPT-feel" model.
OPENROUTER_CHAT_MODEL=openai/gpt-4o-mini

# LLM Provider: Anthropic (direct)
ANTHROPIC_API_KEY=

# Model Routing
MODEL_ROUTING=fast

# Multi-Agent Settings
MULTI_AGENT_PROMPT_MODE=raw

# Raw Chat Mode (ChatGPT-like behavior)
RAW_CHAT_MODE=true

# Security
QUILLO_API_KEY=your-secret-api-key-here
QUILLO_UI_TOKEN=dev-ui-token-12345
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
